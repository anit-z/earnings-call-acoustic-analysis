FROM node:16-alpine as builder

WORKDIR /app

# Copy package files
COPY demonstrator/frontend/package*.json ./
RUN npm ci

# Copy source code
COPY demonstrator/frontend/ .
RUN npm run build

# Production stage
FROM nginx:alpine
COPY --from=builder /app/build /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
